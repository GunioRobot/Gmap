<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
<title>Church Service Finder</title>
<%= javascript_include_tag :defaults %>
<%= javascript_include_tag "shadedborder.js" %>
<%= javascript_include_tag "#{controller.controller_name}" %>
<%= stylesheet_link_tag "#{controller.controller_name}" %>
<%= stylesheet_link_tag "main" %>
<%= calendar_date_select_includes "red"  %>
</head>

<body>
<% content_tag :div, :id => 'main_container', :class => 'main' do %>
<% content_tag :div, :id => 'main_container_inner', :class => 'main' do %>

<% content_tag :div, :id => 'top' do %>

  <% content_tag :div, :id => 'banner' do %>
    <%= image_tag("website_name.png") %>
  <% end %>

  <% content_tag :ul, :id=> 'top_menu' do %>
    <%= top_menu_entry(link_to( "Home",searches_path), true) %> 
    <%if session[:user]!=nil%>
      <%= top_menu_entry(link_to "Manage Churches", churches_path) %> 
      <%= top_menu_entry(link_to "Manage User", users_path) if @is_admin %> 
      <%= top_menu_entry(link_to "Change Password", edit_password_path(1)) %>
      <%= top_menu_entry(link_to "Logout", session_path(2), :method => :delete)%>
      <% content_tag :li, :class => 'top_menu' do %>
        Logged in as: <%=User.find(session[:user]).name%>
       <% end %>
    <%else%>
      <%= top_menu_entry(link_to "Login/Register", new_session_path) %>
    <%end%>

  <% end %>

<% end %>

<% content_tag :div, :id => 'left', :class => 'body_border' do %>
<% end %>

<% content_tag :div, :id => 'right', :class => 'body_border' do %>
<% end %>


<% content_tag :div, :id => 'centre' do %>
  <%= flash[:notice] %>
  <%= yield %>
<% end %>

<%= content_tag( :p, '', :class => 'clear_float') %>

<% content_tag :div, :id => 'footer' do %>
<% end %>


<% end %>
<% end %>

</body>
</html>