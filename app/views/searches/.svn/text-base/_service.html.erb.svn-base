<div id="service_name"><%=@church.name%></div>
<div id="service_detail">
	<table>
		<tr><td><%=@church.street%>,<%=@church.city%>,<%=@church.state.name%></td></tr>
		<tr><td><%=@church.phone%></td></tr>
		<tr><td>Url :<%=@church.url%></td></tr>
	</table>
</div>
<br>
<div class="service_event_link">
<%=link_to_function "service time", "$('show_event').hide();$('show_service').toggle()"%>	<%=link_to_function "Events", "$('show_service').hide();$('show_event').show();"%>
</div>
<div class="show_service" id="show_service">
<%count=1%>


<%for x in @services%>
<p><%=count%>&nbsp;Service: <%=x.start_at.strftime("%a-%I.%M%p")%>-<%=x.end_at.strftime("%a-%I-%M%p")%></p>
<br\>
<%count+=1%>
<%end%>
</table>
</div>
<%count=1%>
<div  style="display :none" id="show_event">
<%count=1%>
<%for x in @events%>

<p><div id="minus<%=x.id%>"  style="display :none"><%=link_to_function(image_tag("minus.gif"), "$('plus#{x.id}').show();$('#{x.id}').toggle();$('minus#{x.id}').hide()")%></div>
   <div id="plus<%=x.id%>"><%=link_to_function(image_tag("plus.gif"), "$('#{x.id}').toggle();$('plus#{x.id}').hide();$('minus#{x.id}').show()")%></div><%=count%>&nbsp;Event: <%=x.start_at.strftime("%a-%I.%M%p")%>-<%=x.end_at.strftime("%a-%I-%M%p")%></p>
<br\>										
<div id="<%=x.id%>" style="display :none"><%=x.description%></div>
<%count+=1%>
<%end%>	
</div>
