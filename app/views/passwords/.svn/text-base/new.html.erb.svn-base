<%= error_messages_for 'users' %>
<p style="color: red;font-weight:bold"><%=flash[:notice]%></p>
<% form_for :user, :url=> passwords_path, :method=>'post' do |f|%>

<table>
	<tr>
		<td>Enter E-mail</td>
		<td><%=f.text_field :email%></td>
	</tr>
	<tr>
		<td><%=submit_tag("Request Password") %></td>
	</tr>
</table>
<%end%>